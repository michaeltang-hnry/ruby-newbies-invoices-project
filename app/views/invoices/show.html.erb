<% content_for :sidebar_footer do %>
  <%= link_to "â† Back to Invoices", invoices_path,
      class: "font-semibold pb-1 border-b-2 border-transparent hover:border-white transition-colors duration-300" %>
<% end %>

<div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md border border-gray-200">

    <div class="flex justify-between items-start mb-8 border-b border-gray-200 pb-6">
        <div>
            <h1 class="text-3xl font-bold text-[#373754]">
                Invoice #<%= @invoice.identifier %>
            </h1>
            <p class="text-gray-500 text-sm mt-1">
                Issued on <%= @invoice.created_at.strftime("%B %d, %Y") %>
            </p>
        </div>
    </div>

    <div class="mb-8">
        <h3 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-2">Bill To</h3>
        <div class="text-lg font-medium text-[#272753]">
            <%= @invoice.client&.name || "No Client Assigned" %>
        </div>
        <% if @invoice.client&.email.present? %>
            <div class="text-gray-500"><%= @invoice.client.email %></div>
        <% end %>
    </div>

    <div class="mb-8">
        <h3 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-4">Invoice Items</h3>
        
        <div class="border-t border-gray-200">
            <% @invoice.invoice_items.each do |item| %>
                <div class="flex justify-between py-4 border-b border-gray-200 last:border-0">
                    
                    <div>
                        <div class="font-medium text-[#272753]"><%= item.description %></div>
                        <div class="text-sm text-gray-500">
                            <%= item.quantity %> x <%= number_to_currency(item.per_cost) %>
                        </div>
                    </div>

                    <div class="font-semibold text-[#272753]">
                        <%= number_to_currency((item.quantity || 0) * (item.per_cost || 0)) %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>

    <div class="flex justify-end border-t-2 border-gray-200 pt-6 mb-8">
        <div class="text-right">
            <span class="block text-xs font-bold text-[#272753] uppercase">Total Due</span>
            <span class="block text-4xl font-bold text-[#33B082]">
                <%= number_to_currency(@invoice.total) %>
            </span>
        </div>
    </div>
</div>