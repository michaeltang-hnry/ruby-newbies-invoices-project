<%= link_to invoice_path(invoice), class: "block group" do %>    
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200 flex justify-between items-center transition hover:shadow-md">
        <div>
            <div class="flex items-center gap-3">
                <span class="font-semibold text-lg text-[#272753]">
                    Invoice #<%= invoice.identifier %>
                </span>
                <span class="text-xs font-semibold bg-[#EFEFFF] text-[#272753] px-2 py-1 rounded-full">
                    <%= invoice.created_at.strftime("%b %d") %>
                </span>
            </div>
            <div class="text-gray-500 font-regular">
                <%= invoice.client&.name || "No Client" %>
            </div>
        </div>

        <div class="text-right">
            <div class="text-xl font-bold text-[#33B082]">
                $<%= number_with_precision(invoice.total, precision: 2) %>
            </div>
            <div class="text-xs text-gray-500 group-hover:text-[#272753] transition mt-1">
                View Details &rarr;
            </div>
        </div>
    </div>
<% end %>