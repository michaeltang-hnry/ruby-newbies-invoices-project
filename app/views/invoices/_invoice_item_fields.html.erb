<div class="flex flex-col md:flex-row gap-4 items-end border-b border-gray-50 pb-4 last:border-0">
    
    <div class="flex-grow w-full">
        <%= f.label :description, class: "block text-xs font-medium text-gray-500 mb-1 uppercase tracking-wide" %>
        <%= f.text_field :description, placeholder: "Item description", class: "block w-full rounded-none border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-1" %>
    </div>

    <div class="w-full md:w-24">
        <%= f.label :quantity, "Qty", class: "block text-xs font-medium text-gray-500 mb-1 uppercase tracking-wide" %>
        <%= f.number_field :quantity, placeholder: "1", class: "block w-full rounded-none border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-1" %>
    </div>

    <div class="w-full md:w-48">
        <%= f.label :per_cost, "Per cost", class: "block text-xs font-medium text-gray-500 mb-1 uppercase tracking-wide" %>
        <div class="relative rounded-none shadow-sm">
            <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                <span class="text-gray-500 sm:text-sm">$</span>
            </div>
            <%= f.number_field :per_cost, step: 0.01, placeholder: "0.00", class: "block w-full rounded-none border-gray-300 pl-7 focus:border-blue-500 focus:ring-blue-500 sm:text-sm p-1" %>
        </div>
    </div>

    <div class="w-full md:w-24 pb-2">
         <div class="text-sm font-medium text-right md:text-left p-1">
            $0.00
         </div>
    </div>

    <div class="pb-2">
        <%# The bin button %>
        <button type="button" class="hover:text-red-600 transition">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg>
        </button>
    </div>

</div>